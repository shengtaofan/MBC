mixin jsonArticle({ headline, description, name, image, datePublished })
  -
    let jsonld =
      {
        '@context': 'https://schema.org',
        '@type': 'NewsArticle',
        headline,
        image: [
          image
        ],
      datePublished,
      author: [{
        '@type': 'Organization',
        name,
        logo: './img/logo.png'
      }],
      description
    }
  script(type='application/ld+json')!=JSON.stringify(jsonld, null, 2)
