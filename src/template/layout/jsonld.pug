mixin jsonFAQ(items)
  - let jsonld ={ '@context': 'https://schema.org/', '@type': 'FAQPage', mainEntity: [] }
  each item, index in items
    -
      let obj = {
        '@type': 'Question',
        name: item.title,
        acceptedAnswer: {
          '@type': 'Answer',
          text: item.ans
        }
      }
    - jsonld.mainEntity.push(obj)
  script(type='application/ld+json')!=JSON.stringify(jsonld, null, 2)
