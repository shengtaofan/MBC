          path#top(fill='none' stroke='url(#myGradient)' stroke-width='8' stroke-linecap='round' d='M48 54A35 35 0 0 1 93 45')
          path#right(fill='none' stroke='url(#myGradient)' stroke-width='8' stroke-linecap='round' d='M108 62A35 35 0 0 1 92 106')
          path#left(fill='none' stroke='url(#myGradient)' stroke-width='8' stroke-linecap='round' d='M70 110C53 107 40 93 40 75V74')
        path(fill='url(#myGradient)' d='M102 36L85 54L103 53Z')
        path(fill='url(#myGradient)' d='M88 94L95 117L80 109Z')
        path(fill='url(#myGradient)' d='M52 76L28 71L43 62Z')
        use(xlink:href='#top')
        use(xlink:href='#left')
        use(xlink:href='#right')
        text
          textPath(xlink:href='#top')&attributes({ textLength: '50', startOffset: '5' })
