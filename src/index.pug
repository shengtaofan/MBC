extends ./template/layout.pug
block local
  - headerH1 = true
  - const substringLength = locale === 'en' ? 17 : 5
  -
    const form = [
      { id: 'name', label: $('name'), placeholder: $('namePlaceholder'), type: 'text' },
      { id: 'tel', label: $('tel'), placeholder: $('telPlaceholder'), type: 'tel' },
      { id: 'mail', label: $('email'), placeholder: $('emailPlaceholder'), type: 'email' },
      { id: 'subject', label: $('subject'), placeholder: $('subjectPlaceholder'), type: 'text' }
